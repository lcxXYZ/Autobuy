-- Generated with Sigma Spy Github: https://github.com/depthso/Sigma-Spy
-- Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")

-- Remote
local PurchaseBoneUpgrade = ReplicatedStorage.Remotes.PurchaseBoneUpgrade -- RemoteEvent 

-- Global toggle variable
getgenv().autoPurchaseHead = false -- start off

-- Function to handle the loop
spawn(function()
    while true do
        if getgenv().autoPurchaseTorso then
            PurchaseBoneUpgrade:FireServer("Head")
        end
        wait(1) -- runs every 1 second
    end
end)
--head
